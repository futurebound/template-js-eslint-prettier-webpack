{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "import/extensions": ["error", "always", { "ignorePackages": true }],
    "no-console": "off",
    "quotes": ["error", "single", { "avoidEscape": true }]
  }
}
